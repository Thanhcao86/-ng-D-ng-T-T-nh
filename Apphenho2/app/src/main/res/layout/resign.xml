<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/input"
    >
    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="The Name: "
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="29dp"
        android:id="@+id/textView9"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Tài Khoản:"
        android:layout_marginTop="22dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="17dp"
        android:id="@+id/editText4"
        android:layout_alignTop="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/editText4"
        android:id="@+id/editText5" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Pass:"
        android:layout_below="@+id/textView11"
        android:layout_toStartOf="@+id/editText4"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView12">
    </TextView>
    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignStart="@+id/editText5"
        android:id="@+id/editText6">

    </EditText>
    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Confirm pass:"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:id="@+id/textView13"
        android:textColor="@color/colorPrimary">

    </TextView>
    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignStart="@+id/editText6"
        android:id="@+id/editText7">
    </EditText>
    <CheckBox
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/checkBox"
        android:layout_alignBaseline="@+id/editText8"
        android:layout_alignBottom="@+id/editText8"
        android:layout_toStartOf="@+id/editText7" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nữ"
        android:layout_alignBaseline="@+id/checkBox3"
        android:layout_alignBottom="@+id/checkBox3"
        android:layout_toStartOf="@+id/checkBox3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nam"
        android:layout_alignBaseline="@+id/checkBox2"
        android:layout_alignBottom="@+id/checkBox2"
        android:layout_toStartOf="@+id/checkBox2" />
    <CheckBox
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editText7"
        android:layout_alignStart="@+id/button"
        android:id="@+id/checkBox2" />
    <CheckBox
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editText7"
        android:layout_alignEnd="@+id/editText7"
        android:id="@+id/checkBox3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tôi chấp nhận yêu cầu của hệ thống."
        android:id="@+id/editText8"
        android:textSize="18dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/editText7"
        android:layout_alignStart="@+id/editText7"
        android:layout_marginTop="61dp" />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/checkBox"
        android:layout_alignEnd="@+id/editText7"
        android:layout_marginTop="39dp"
        android:text="Resign"
        android:id="@+id/button" />
</RelativeLayout>